#!/command/execlineb -P
with-contenv
define main_dir "/vdr"
define conf_dir "${main_dir}/config"
define pkg_dir "${main_dir}/pkgbuild"
define sys_dir "${main_dir}/system"
foreground {
 if -n { eltest -d "${main_dir}" }
  s6-mkdir -p -m 0755 "${main_dir}"
 }
foreground { s6-echo "Prepare workdir" }
foreground { redirfd -w 2 /dev/null cp -RPpn /defaults/config/. "${conf_dir}" }
foreground { redirfd -w 2 /dev/null cp -RPpn /defaults/pkgbuild/. "${pkg_dir}" }
foreground { redirfd -w 2 /dev/null cp -RPpn /defaults/system/. "${sys_dir}" }
s6-true
