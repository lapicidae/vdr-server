#!/command/with-contenv bash

logo_ext_done="/.logo_ext_done"
logo_dir="/vdr/channellogos"

if [ ! -e "$logo_ext_done" ] && [ "$LOGO_COPY" != "false" ]; then
	echo "Extract new channellogos: $logo_dir"
	tar xf "/defaults/channellogos.tar.xz" --owner=epgd --group=epgd --skip-old-files -C "$logo_dir"
	touch "$logo_ext_done"
fi
