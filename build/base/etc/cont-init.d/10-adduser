#!/usr/bin/with-contenv bash

PUID=${PUID:-666}
PGID=${PGID:-666}

groupmod -o -g "$PGID" vdr
usermod -o -u "$PUID" vdr

echo '
--------------------------------------------------------------
                      _  _  ____  ____
                     ( \/ )(  _ \(  _ \
                      \  /  )(_) ))   /
                       \/  (____/(_)\_)

                     http://www.tvdr.de/
--------------------------------------------------------------'
echo '
GID/UID
--------------------------------------------------------------'
echo "
User uid:    $(id -u vdr)
User gid:    $(id -g vdr)
--------------------------------------------------------------
"
