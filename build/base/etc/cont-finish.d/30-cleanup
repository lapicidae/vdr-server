#!/usr/bin/with-contenv bash

echo "clean paru/pacman cache directorys..."
paru --noconfirm -Sccd 1>/dev/null

# clean paru cache dir - exlude hidden and 'user_pkg' dir
echo "clean paru build cache..."
find "/var/cache/paru" -mindepth 1 -maxdepth 1 -type d -not -path "*\/user_pkg" -not -path '*/\.*' -exec rm -rf {} \;
